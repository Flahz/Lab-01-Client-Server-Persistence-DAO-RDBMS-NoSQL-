<?xml version="1.0" encoding="UTF-8" ?>
<configure xmlns="http://schemas.xmlsoap.org/encoding/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://schemas.xmlsoap.org/encoding/ ConfigXMLSchema.xsd">
  <fileGroup treeRootName="Cisco Secure Client" directoryName="Cisco Secure Client\Core">
  <title>Core</title>
  <file id="csc-logs" directoryName="Logs">
    <default>true</default>
    <description>Cisco Secure Client application logs</description>
    <gui>
      <label>_tr("Cisco Secure Client application logs")</label>
      <file_type>log</file_type>
    </gui>
    <dart>
      <required>false</required>
      <os opsys="win">
        <use_extern_action>
          <action>
            <plugin></plugin>
            <args>wineventlog.exe -l "Cisco Secure Client" -f %TEMP%\CiscoSecureClient.txt</args>
            <clear_log apply="false"></clear_log>
            <temp_out>%TEMP%\CiscoSecureClient.txt</temp_out>
          </action>
          <action>
            <path>%WINDIR%\System32</path>
            <args>wevtutil epl "Cisco Secure Client" %TEMP%\CiscoSecureClient.evtx</args>
            <clear_log apply="true">wevtutil cl "Cisco Secure Client"</clear_log>
            <temp_out>%TEMP%\CiscoSecureClient.evtx</temp_out>
          </action>
        </use_extern_action>
      </os>
    </dart>
  </file>
  <file id="csc-core-install" directoryName="Install Logs">
    <default>true</default>
    <description>Cisco Secure Client Core install logs</description>
    <gui>
      <label>_tr("Cisco Secure Client Core install logs")</label>
      <file_type>log</file_type>
    </gui>
    <dart>
      <required>false</required>
      <os opsys="win">
        <file_copy_action>
          <action>
            <loc>%ALLUSERSPROFILE%\Cisco\Cisco Secure Client\update.txt</loc>
            <clear_log apply="false"/>
          </action>
          <action>
            <loc>%ALLUSERSPROFILE%\Cisco\Cisco Secure Client\VPNManifest.dat</loc>
            <clear_log apply="false"/>
          </action>
          <action>
            <loc gather_newest="true">%ALLUSERSPROFILE%\Cisco\Cisco Secure Client\Logs\UpdateHistory_*.txt</loc>
            <clear_log apply="false"/>
          </action>
        </file_copy_action>
      </os>
      <os opsys="linux">
        <file_copy_action>
          <action>
            <loc>/opt/cisco/secureclient/update.txt</loc>
            <clear_log apply="false"/>
          </action>
          <action>
            <loc>/opt/cisco/secureclient/VPNManifest.dat</loc>
            <clear_log apply="false"/>
          </action>
        </file_copy_action>
      </os>
      <os opsys="mac">
        <file_copy_action>
          <action>
            <loc>/opt/cisco/secureclient/update.txt</loc>
            <clear_log apply="false"/>
          </action>
          <action>
            <loc>/opt/cisco/secureclient/VPNManifest.dat</loc>
            <clear_log apply="false"/>
          </action>
        </file_copy_action>
      </os>
    </dart>
  </file>
  <file id="csc-core-profiles" directoryName="Profiles">
    <default>true</default>
    <description>Cisco Secure Client Core profiles</description>
    <gui>
      <label>_tr("Cisco Secure Client Core profiles")</label>
      <file_type>log</file_type>
    </gui>
    <dart>
      <required>false</required>
      <os opsys="win">
        <file_copy_action>
          <action>
            <loc>%ALLUSERSPROFILE%\Cisco\Cisco Secure Client\AnyConnectLocalPolicy.xml</loc>
            <clear_log apply="false"/>
          </action>
        </file_copy_action>
      </os>
      <os opsys="linux">
        <file_copy_action>
          <action>
            <loc>/opt/cisco/secureclient/AnyConnectLocalPolicy.xml</loc>
            <clear_log apply="false"/>
          </action>
        </file_copy_action>
      </os>
      <os opsys="mac">
        <file_copy_action>
          <action>
            <loc>/opt/cisco/secureclient/AnyConnectLocalPolicy.xml</loc>
            <clear_log apply="false"/>
          </action>
        </file_copy_action>
      </os>
    </dart>
  </file>
  </fileGroup>
</configure>
